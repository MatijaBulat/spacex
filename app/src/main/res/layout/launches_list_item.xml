<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardBackgroundColor"
    app:cardCornerRadius="@dimen/cardRadius"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/listItemBackgroundColor"
        android:padding="@dimen/listItemPadding">

        <ImageView
            android:id="@+id/ivListItemImg"
            android:layout_width="@dimen/listItemImageWidth"
            android:layout_height="@dimen/listItemImageHeight"
            android:alpha="1.0"
            tools:src="@drawable/elon_musk" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/listItemTextMarginLeft"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvListItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="1.0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/listItemTextSize"
                tools:text="AjmeMeni" />

            <TextView
                android:id="@+id/tvListItemDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="1.0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/listItemTextSize2"
                tools:text="Date" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>